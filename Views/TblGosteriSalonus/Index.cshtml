@model IEnumerable<TheaterClubProject.Models.TblGosteriSalonu>

@{
    ViewData["Title"] = "Index";
}

<html>
<head>
    <title>Gösteri Salonları</title>

    <style>
        .textSpecs {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 40px;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <br />
    <br />
    <div class="text-center textSpecs">
        GÖSTERİ SALONLARI
        <p>
            <a class="btn btn-outline-dark align-content-center" asp-action="Create">Yeni Salon Ekle</a>
        </p>
    </div>

</body>
</html>

</p>
<table class="table table-bordered table-striped " id="tbllist">
    <thead class=" bg-dark text-white">
        <tr>
            <th>
                Salon ID
            </th>
            <th>
                Salonun Adı
            </th>
            <th>
                Salonun Adresi
            </th>
            <th>
                Salonun Telefon Numarası
            </th>
            <th>
                Salonun Emaili
            </th>
            <th>Eylemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td style="text-align: center; vertical-align: middle">
                    @Html.DisplayFor(modelItem => item.SalonId)
                </td>
                <td style="text-align: center; vertical-align: middle">
                @Html.DisplayFor(modelItem => item.SalonAd)
            </td>
                <td style="text-align: center; vertical-align: middle">
                @Html.DisplayFor(modelItem => item.SalonAdres)
            </td>
                <td style="text-align: center; vertical-align: middle">
                @Html.DisplayFor(modelItem => item.SalonTelNo)
            </td>
                <td style="text-align: center; vertical-align: middle">
                @Html.DisplayFor(modelItem => item.SalonEmail)
            </td>
            <td>
                <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@item.SalonId">Düzenle</a> |
                <a class ="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.SalonId">Detaylar</a> |
                <a class="btn btn-outline-dark" asp-action="Delete" asp-route-id="@item.SalonId">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>

