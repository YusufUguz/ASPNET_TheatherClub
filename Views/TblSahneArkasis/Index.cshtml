@model IEnumerable<TheaterClubProject.Models.TblSahneArkasi>

@{
    ViewData["Title"] = "Index";
}

<html>
<head>
    <title>Sahne Arkası</title>

    <style>
        .textSpecs {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 40px;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <br />
    <br />
    <div class="text-center textSpecs">
        SAHNE ARKASI EKİBİ
        <p>
            <a class="btn btn-outline-dark align-content-center" asp-action="Create">Yeni Sahne Arkası Üyesi Ekle</a>
        </p>
    </div>

</body>
</html>

<table class="table table-bordered table-striped " id="tbllist">
    <thead class=" bg-dark text-white">
        <tr>
             <th>
                SA Üyesi ID
            </th>
            <th>
                SA Üyesi Fotoğraf
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaAdSoyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaTelNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaDogumTarihi)
            </th>
            <th>
                SA Üyesinin Alanı
            </th>
            <th>Eylemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td style="text-align: center; vertical-align: middle">
                    @Html.DisplayFor(modelItem => item.SahneArkasiId)
                </td>
                <td style="text-align: center; vertical-align: middle">
                    <img src="@("~/Images/"+item.SaFoto)" alt="Sa Fotoğrafı" asp-append-version=true width="80" height="120" />
            </td>
                <td style="text-align: center; vertical-align: middle">
                @Html.DisplayFor(modelItem => item.SaAdSoyad)
            </td>
                <td style="text-align: center; vertical-align: middle">
                @Html.DisplayFor(modelItem => item.SaTelNo)
            </td>
                <td style="text-align: center; vertical-align: middle">
                @Html.DisplayFor(modelItem => item.SaEmail)
            </td>
                <td style="text-align: center; vertical-align: middle">
                @Html.DisplayFor(modelItem => item.SaDogumTarihi)
            </td>
                <td style="text-align: center; vertical-align: middle">
                @Html.DisplayFor(modelItem => item.SaAlan!.SaAlan)
            </td>
            <td >
                <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@item.SahneArkasiId">Düzenle</a> |
                    <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.SahneArkasiId">Detaylar</a> |
                    <a class="btn btn-outline-dark" asp-action="Delete" asp-route-id="@item.SahneArkasiId">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>

