@model IEnumerable<TheaterClubProject.Models.TblOyun>

@{
    ViewData["Title"] = "Oyunlar";
}


<html>
<head>
    <title>Oyunlar</title>

    <style>
        .textSpecs {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 40px;
            font-weight: bold;
        }
    </style>
</head>

<body><br /> <br />
    <div class="text-center textSpecs">OYUNLAR
        <p>
            <a class="btn btn-outline-dark align-content-center" asp-action="Create">Yeni Oyun Ekle</a>
        </p>
    </div>
    
</body>
</html>

<table class="table table-bordered table-striped " id="tbllist">
    <thead class=" bg-dark text-white">
        <tr>
            <th>
                Oyun ID
            </th>
            <th>
                Oyunun Fotoğrafı
            </th>
            <th>
                Oyunun Adı
            </th>
            <th>
                Oyunun Türü
            </th>
            <th>
                Oyunun Dakika Süresi
            </th>
            <th>
                Oyunun Yaş Sınırı
            </th>
            <th>Eylemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td style="text-align: center; vertical-align: middle">
                
                @Html.DisplayFor(modelItem => item.OyunId)
             </td>
                <td>
                    <img src="@("~/Images/"+item.OyunFoto)" alt="Oyun Fotoğrafı" asp-append-version=true width="80" height="120"/>               
            </td>
                <td style="text-align: center; vertical-align: middle">
                @Html.DisplayFor(modelItem => item.OyunAd)
            </td>
                <td style="text-align: center; vertical-align: middle">
                @Html.DisplayFor(modelItem => item.OyunTur)
            </td>
                <td style="text-align: center; vertical-align: middle">
                @Html.DisplayFor(modelItem => item.OyunDakika)
            </td>
                <td style="text-align: center; vertical-align: middle">
                @Html.DisplayFor(modelItem => item.OyunYasSiniri)
            </td>
            <td>
                    <a class ="btn btn-outline-dark" asp-action="Edit" asp-route-id="@item.OyunId">Düzenle</a>
                    <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.OyunId">Detaylar</a> 
                    <a class="btn btn-outline-dark" asp-action="Delete" asp-route-id="@item.OyunId">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>

<script type="text/javascript">

    var js = jQuery.noConflict(true);
    
    js(document).ready(function(){

    js('#tbllist').DataTable({

    });


});</script>
